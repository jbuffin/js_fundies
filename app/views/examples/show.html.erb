<script>
	function run_js(){

		try{
		  eval($('#content').val());
		  $('#codeLabel').removeClass('label-important');
		  $('#codeLabel').addClass('label-success');
		  $('#codeLabel').text('Success');
		}catch(err){
			$('#codeLabel').removeClass('label-success');
			$('#codeLabel').addClass('label-important');
			$('#codeLabel').text('Error in code');
		}
	}

	function clear_results(){
		$('#codeLabel').removeClass();
		$('#codeLabel').addClass('label');
		$('#codeLabel').text('Base Code');
		$('#Results').empty();
	}
</script>

<div class="container-fluid">
	<div id="top-section" class="row-fluid" style="height: 400px">
		<div class="span12">
			<div class="row-fluid">
				<div class="span7">
					<span id="codeLabel" class="label">Base Code</span>
				</div>
				<div class="span5">
					<span id="codeLabel" class="label">Helpers</span>
				</div>
			</div>
			<div id="helper" class="row-fluid" >
			     <!--Body content-->
			     <div  id="helper2" class="span7">
			     	<textarea style="resize: none;height: 400px;" class="span12" id="content" placeholder="Type Here" ><%= @example.starting_point %></textarea>
			     </div>
		  
				 <div class="span5 ">
			     	<textarea style="resize: none;height: 400px;" class="span12 well" id="right-bar" readonly="readonly"  ><%=@example.available_functions%></textarea>
			     </div>
	    	</div>
	    	<div class="row-fluid">
				<button onClick="run_js()" class="btn btn-info">Execute</button>
				<button onClick="clear_results()" class="btn btn-danger">Clear</button>
			</div>
		</div>	
	</div>

	<div id="bottom-section" >
		<div class="row-fluid">
			<div class="span12 ">
				&nbsp;
			</div>
		</div>
		<div class="row-fluid">
			<div class="span12 ">
				<span id="codeLabel" class="label">Results</span>
			</div>
		</div>
    	<div class="row-fluid">
			<div class="span12">
				<textarea readonly="readonly" class="span12 well" id="Results" style="height: 150px;resize: none; font-size: 12px"></textarea>
			</div>
		</div>
	</div>
	
</div>
